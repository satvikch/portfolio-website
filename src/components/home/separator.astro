---
import '../../assets/css/main.css'
const {id, text } = Astro.props;
---

<div class="relative my-32">
  <div class="relative w-full pl-5 overflow-x-hidden md:pl-0">
    <div
      class="absolute w-full h-px bg-gradient-to-r from-transparent to-white md:from-white dark:from-transparent dark:to-neutral-950 md:dark:from-neutral-950 md:via-transparent md:dark:via-transparent md:to-white md:dark:to-neutral-950"
    >
    </div>
    <!-- <div
      class="w-full h-px border-t border-dashed border-neutral-300 dark:border-neutral-600"
    > -->
    <div class="w-full h-px border-t border-dashed border-neutral-300 dark:border-neutral-600 bounce-dots">
    </div>
  </div>
   <a href={`#${id}`} class="transition duration-100 ease-in-out">
  <div
    class="absolute flex items-center 
    justify-center w-auto h-auto px-3 py-1.5 uppercase tracking-widest 
    space-x-1 text-[0.6rem] md:-translate-x-1/2 -translate-y-1/2 border 
    rounded-full bg-neutral-900 dark:bg-white text-white dark:text-neutral-950 
    left-0 md:ml-0 ml-5 md:left-1/2 border-neutral-100 dark:border-white shadow-sm hover:bg-indigo-900 
    hover:text-neutral-100 dark:hover:bg-indigo-900 dark:hover:text-neutral-100"
  >
    <p class="leading-none">{text}</p>
    <div
      class="flex items-center justify-center w-5 h-5 translate-x-1 border rounded-full border-neutral-300 dark:border-neutral-400"
    >
      <svg
        class="w-3 h-3 animate-bounce"
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
        stroke-width="1.5"
        stroke="currentColor"
        ><path
          stroke-linecap="round"
          stroke-linejoin="round"
          d="M12 4.5v15m0 0l6.75-6.75M12 19.5l-6.75-6.75"></path></svg
      >
    </div>
  </div>
  </a>
</div>


<style>
.bounce-dots::before {
    content: '';  /* Required for pseudo-elements */
    position: absolute;
    left: 0;
    top: -5px;  /* Adjust vertically to align with the dashed line */
    width: 100%;
    height: 10px;  /* Height of the bouncing effect */
    background: repeating-linear-gradient(
        to right,
        transparent,
        transparent 5px,
        #000 5px,
        #000 10px  /* Create dots, adjust colors as needed */
    );
    animation: bounce 1.5s infinite linear;
}

@keyframes bounce {
    0%, 100% {
        transform: translateY(0);
    }
    50% {
        transform: translateY(-5px);  /* Bounce height */
    }
}
</style>




